<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MemEngine360.Xbox360XDevkit.Views.OpenXDevkitConnectionView">
    <StackPanel Margin="10">
        <TextBlock Padding="0,0,0,2"
                   Text="Note - Xbox360 Neighbourhood is required (2.0.21256.0 or above)"
                   FontSize="16"
                   Foreground="{DynamicResource ABrush.ColourfulGlyph.Static}"
                   FontWeight="Medium"
                   TextWrapping="Wrap"/>
        <Separator/>
        <TextBlock Text="IP/Hostname Address" Padding="0,5"/>
        <TextBox x:Name="PART_IpAddressTextBox" Padding="5,5" 
                 VerticalContentAlignment="Center"
                 ScrollViewer.VerticalScrollBarVisibility="Disabled"
                 Text="ERROR"/>
    </StackPanel>
</UserControl>