<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MemEngine360.PS3.OpenCCAPIConnectionView">
    <StackPanel Margin="10">
        <TextBlock Padding="0,0,0,2"
                   Text="Ensure you have CCAPI running on your PS3"
                   FontSize="16"
                   Foreground="{DynamicResource ABrush.ColourfulGlyph.Static}"
                   FontWeight="Medium"
                   TextWrapping="Wrap"/>
        <Separator/>

        <TextBlock Text="IP/Hostname Address" Padding="0,5"/>
        <TextBox x:Name="PART_IpAddressTextBox" Padding="5,5"
                 VerticalContentAlignment="Center"
                 ScrollViewer.VerticalScrollBarVisibility="Disabled"
                 Text="ERROR"/>
        <Separator Margin="0,5"/>
        <TextBlock Padding="0,0,0,2"
                   Text="Warning! This console type is completely untested. I do not have a PS3 yet to test it."
                   Foreground="OrangeRed"
                   TextWrapping="Wrap"
                   FontWeight="Medium"/>
        <Separator/>
    </StackPanel>
</UserControl>