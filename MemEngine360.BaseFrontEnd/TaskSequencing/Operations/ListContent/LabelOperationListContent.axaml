<lc:BaseOperationListContent xmlns="https://github.com/avaloniaui"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                             xmlns:lc="clr-namespace:MemEngine360.BaseFrontEnd.TaskSequencing.Operations.ListContent"
                             xmlns:tt="clr-namespace:PFXToolKitUI.Avalonia.ToolTips;assembly=PFXToolKitUI.Avalonia"
                             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
                             x:Class="MemEngine360.BaseFrontEnd.TaskSequencing.Operations.ListContent.LabelOperationListContent">
    <StackPanel Orientation="Horizontal">
        <TextBlock Text="Label" FontFamily="{StaticResource FontOxanium}" FontWeight="Medium" VerticalAlignment="Center" Padding="4,0"/>
        <TextBox x:Name="PART_LabelNameTextBox" 
                 VerticalContentAlignment="Center" VerticalAlignment="Center"
                 Padding="2,2"
                 HorizontalAlignment="Left"
                 Background="{DynamicResource ABrush.Tone1.Background.Static}"
                 BorderThickness="1" 
                 Watermark="label name" MinWidth="100"
                 tt:ToolTipEx.Tip="The unique name of this label, relative to the sequence">
        </TextBox>
    </StackPanel>
</lc:BaseOperationListContent>